<% if @issue.safe_attribute? 'watcher_group_ids' -%>
  <%= hidden_field_tag 'issue[watcher_group_ids][]', '' %>
  <p id="watcher_groups_form"><label><%= l(:label_issue_watcher_groups) %></label>
  <span id="watcher_groups_inputs">
    <%= watcher_groups_checkboxes(@issue, groups_for_new_issue_watchers(@issue)) %>
  </span>
  <span class="search_for_watchers">
  <%= link_to l(:label_search_for_watcher_groups),
              {:controller => 'watcher_groups', :action => 'new', :project_id => @issue.project},
              :class => 'icon icon-add-bullet',
              :remote => true,
              :method => 'get' %>
  </span>
  </p>
<% end %>

<%= stylesheet_link_tag 'watcher_groups.css', :plugin => 'redmine_watcher_groups' %>